<launch>
  <!-- Load map -->
  <node pkg="map_server" type="map_server" name="map_server"
        args="$(find hurba_navigation)/maps/map.yaml" />

  <!-- AMCL -->
  <node pkg="amcl" type="amcl" name="amcl" output="screen" />

  <!-- Move Base -->
  <node pkg="move_base" type="move_base" name="move_base" output="screen">
    <rosparam file="$(find hurba_navigation)/param/costmap_common_params.yaml" command="load" />
    <rosparam file="$(find hurba_navigation)/param/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find hurba_navigation)/param/local_costmap_params.yaml" command="load" />
  </node>
</launch>
